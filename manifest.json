{
  "manifest_version": 2,
  "name": "Log network requests",
  "version": "1.1",

  "description": "Logs network requests as a web extension add-on.",
  "icons": {
    "48": "icons/log-48.png"
  },

  "permissions": [
    "webRequest",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/log-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_security_policy": "script-src 'self'"
}
